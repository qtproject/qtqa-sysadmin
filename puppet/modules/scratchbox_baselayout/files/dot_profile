if test -d "$HOME/bin"; then
    PATH="$HOME/bin:$PATH"
    export PATH
fi

# Figure out appropriate parallel count by number of CPUs
# Note: if/when we set up icecc in scratchbox, this should go away
PARALLEL=parallel=$(expr $(nproc) + 1)
if [ "x$DEB_BUILD_OPTIONS" = "x" ]; then
    DEB_BUILD_OPTIONS=$PARALLEL
elif echo "$DEB_BUILD_OPTIONS" | grep -q 'parallel='; then
    # Do not override any existing parallel= setting
    :
else
    DEB_BUILD_OPTIONS="$DEB_BUILD_OPTIONS $PARALLEL"
fi
export DEB_BUILD_OPTIONS

